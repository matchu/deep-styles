// @flow
/**
 * This file just re-declares the types of index.js, because we need to strip
 * Flow types from the runtime code, but we want the client code to be type
 * checked, but it's not currently feasible to auto-generate this companion
 * file from the source, due to `gen-flow-files` not yet supporting recursive
 * types.
 */
import type {DOMElementStyleProps} from "./apply/css/exported-types.js";
import type {StyleDefinition, StyleDefinitionRule} from "./exported-types.js";

declare export function create<D: {[ruleName: string]: StyleDefinition}>(
    definition: D,
): {[ruleName: $Keys<D>]: StyleDefinitionRule};

declare export function apply(
    ...definitions: Array<StyleDefinition>
): DOMElementStyleProps;

type StyleSheet = {
    create<D: {[ruleName: string]: StyleDefinition}>(
        definition: D,
    ): {[ruleName: $Keys<D>]: StyleDefinitionRule},
    apply(
        ...definitions: Array<StyleDefinition>
    ): DOMElementStyleProps,
};

declare export default StyleSheet;
